<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.iri.dao3.controller.IndexController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createNewDriver</servlet-name>
        <servlet-class>com.iri.dao3.controller.CreateNewDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewDriver</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>renderAllDrivers</servlet-name>
        <servlet-class>com.iri.dao3.controller.RenderAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>renderAllDrivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createManufacturer</servlet-name>
        <servlet-class>com.iri.dao3.controller.CreateManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createManufacturer</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>renderAllManufacturers</servlet-name>
        <servlet-class>com.iri.dao3.controller.RenderAllManufacturersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>renderAllManufacturers</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createNewCar</servlet-name>
        <servlet-class>com.iri.dao3.controller.CreateNewCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createNewCar</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>renderAllCars</servlet-name>
        <servlet-class>com.iri.dao3.controller.RenderAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>renderAllCars</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>com.iri.dao3.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>com.iri.dao3.controller.DeleteManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>com.iri.dao3.controller.DeleteDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>com.iri.dao3.controller.DeleteCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/cars/delete</url-pattern>
    </servlet-mapping>
</web-app>
